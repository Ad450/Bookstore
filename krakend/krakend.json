{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "Bookstore-Gateway",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "port": 9000,
    "endpoints": [
      {
        "endpoint": "/v1/books",
        "method": "GET",
        "output_encoding": "json",

        "extra_config": {
          "auth/validator": {
              "alg": "RS256",
              "jwk_url": "https://github.com/Ad450/Bookstore/blob/main/krakend/jwk.json",
              "cache": true
          }
      },
        "backend": [
          {
            "url_pattern": "/v1/books",
            "encoding": "json",
            "method": "GET",
            "host": [
              "http://host.docker.internal:8000"
            ]
          }
        ]
      },
      {
        "endpoint": "/v1/login",
        "method": "POST",
        "output_encoding": "json",
        "extra_config": {
          "auth/signer": {
              "alg": "RS256",
              "jwk_url": "https://github.com/Ad450/Bookstore/blob/main/krakend/jwk.json",
              "kid": "secret",
              "keys_to_sign": ["access_token"]
          }
      },
        "backend": [
          {
            "url_pattern": "/v1/login",
            "encoding": "json",
            "method": "POST",
            "host": [
              "http://host.docker.internal:8000"
            ]
          }
        ]
      }
      
    ]
  }