{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "Bookstore-Gateway",
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "port": 9000,
    "endpoints": [
      {
        "endpoint": "/login",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/v1/login",
            "encoding": "json",
            "method": "GET",
            "host": [
              "http://0.0.0.0:8083"
            ]
          }
        ],
        "extra_config": {
          "auth/signer": {
            "alg": "HS256",
            "kid": "sim2",
            "keys_to_sign": ["access_token", "refresh_token"],
            "jwk_url":"https://0.0.0.0:3000/v1/json",
            "disable_jwk_security": true
          }
        }
      },

      {
        "endpoint": "/books",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/v1/books",
            "encoding": "json",
            "method": "GET",
            "host": [
              "http://0.0.0.0:8083"
            ]
          }
        ],
        "extra_config": {
          "auth/validator": {
            "alg": "HS256",
            "jwk_url": "https://0.0.0.0:3000/v1/json",
            "cache": true
        }
        }
      }
    ]
  }